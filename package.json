    "@nx/eslint-plugin": "20.6.2",
    "@nx/js": "^20.6.2",
    "@nx/vite": "20.6.2",
    "@nx/web": "20.6.2",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/node": "18.16.9",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "jiti": "2.4.2",
    "jsdom": "^26.0.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lint-staged": "^15.5.0",
    "nx": "^20.6.2",
    "prettier": "^2.6.2",
